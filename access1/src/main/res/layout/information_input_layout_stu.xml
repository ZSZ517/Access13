<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/student_information_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_information_btn_shape"
        android:paddingLeft="30dp"
        android:drawableStart="@drawable/info_input_dor"
        android:text="录入学生信息" />

    <Button
        android:id="@+id/relative_information_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
         android:paddingLeft="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_information_btn_shape"
        android:drawableLeft="@drawable/info_input_dor"
        android:text="录入家属信息" />

</LinearLayout>