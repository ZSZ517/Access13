<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/portrait_iv"
            android:layout_width="96dp"
            android:scaleType="fitXY"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/portrait_iv_shape"
            android:src="@drawable/portrait_default" />

        <TextView
            android:id="@+id/portrait_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="管理公寓"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.2"
        android:orientation="vertical" >

        <Button
            android:id="@+id/other_setting_btn1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/settings_button_shape"
            android:drawableLeft="@drawable/manage_object"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/pulldown_right"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="管理对象" />

        <Button
            android:id="@+id/other_setting_btn2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/settings_button_shape"
            android:drawableLeft="@drawable/change_pwd"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/pulldown_right"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="修改密码" />

        <Button
            android:id="@+id/other_setting_btn4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/settings_button_shape"
            android:drawableLeft="@drawable/feedback"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/pulldown_right"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="意见反馈" />

        <Button
            android:id="@+id/other_setting_btn5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/settings_button_shape"
            android:drawableLeft="@drawable/change_account"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/pulldown_right"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="退出登录" />
    </LinearLayout>

</LinearLayout>