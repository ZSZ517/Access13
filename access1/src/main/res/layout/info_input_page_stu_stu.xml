<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/info_input_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="学生基本信息"
        android:textColor="#006400"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/info_input_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/add_photo_shape"
       
        android:src="@drawable/add_photo" />

    <LinearLayout
        android:layout_width="match_parent"
         android:layout_marginTop="35dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/info_input_et1"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="宿舍"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:maxLines="1"
            android:paddingLeft="7dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/bottomLineColor" />
    </LinearLayout>

    <EditText
        android:id="@+id/info_input_et2"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_text_border"
        android:hint="联系方式"
        android:maxLines="1"
        android:paddingLeft="7dp" />

    <Button
        android:id="@+id/info_input_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="75dp"
        android:background="@drawable/green_button_shape"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>